/*  Write a JavaScript function to check whether an `input` is an array or not. 
Test Data :
console.log(is_array('w3resource')); 
console.log(is_array([1, 2, 4, 0]));
false
true */

var x = "w3resource";
var y = [1, 2, 4, 0];

function testArray(arg){
  
  if(Array.isArray(arg)){
    return true;
  }
  else{
    return false;
  }
}

console.log(testArray(y));
